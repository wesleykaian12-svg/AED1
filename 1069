#include <stdio.h>
#include <string.h>

int main() {
    int N;
    char linha[1001];
    
    scanf("%d", &N);
    getchar(); // consome o '\n' após o número

    for (int i = 0; i < N; i++) {
        fgets(linha, 1001, stdin);

        int pilha = 0;     // conta quantos '<' ainda não formaram diamante
        int diamantes = 0; // total de diamantes encontrados

        for (int j = 0; linha[j] != '\0'; j++) {
            if (linha[j] == '<') {
                pilha++;
            } else if (linha[j] == '>') {
                if (pilha > 0) { // encontrou um par válido "<>"
                    pilha--;
                    diamantes++;
                }
            }
        }
        printf("%d\n", diamantes);
    }

    return 0;
}
